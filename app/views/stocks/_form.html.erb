<div class="row user-form">
  <div class="col-xs-4"></div>
  <div class="col-xs-4">
    <div class="panel panel-default">
      <div class="panel-heading">Create New Stock</div>

      <div class="panel-body">
        <%= form_with(model: stock, local: true) do |form| %>
            <% if stock.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(stock.errors.count, "error") %> prohibited this stock from being saved:</h2>

                  <ul>
                    <% stock.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>

            <div class="field">
              <%= form.label :ticker %>
              <%= form.text_field :ticker %>
            </div>

            <div class="field">
              <%= form.label :user_id %>
              <%= form.text_field :user_id, :value => current_user.id %>
            </div>

            <div class="actions">
              <%= form.submit :class => 'btn btn-primary' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>